<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SF Pro Text</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white_opacity80</item>
    </style>

    <style name="tv_shuffle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SF Pro Text</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_song_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SF Pro Text</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_opacity80</item>
    </style>

    <style name="tv_explicit_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SF Pro Text</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white_opacity45</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>

    </style>
    <style name="tv_singer_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SF Pro Text</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_opacity45</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tv_nav_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">Gilmer</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>